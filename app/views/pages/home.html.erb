<div class="home-page-container">
  <div class="banner">
    <div class="banner-content">
      <div>
        <h1>TROPIC LIKE IT'S HOT</h1>
      </div>
        <div id="typed-strings" class="typed-color">
          <p>RENT A HOUSE...?</p>
          <p>RENT A VILLA...?</p>
          <p>RENT AN <span style="text-decoration: underline">ISLAND</span></p>
        </div>
      <span id="typed"></span>
      <div class="search-bar">
        <%= form_tag islands_path, method: :get do %>
          <%= text_field_tag :query,
          params[:query],
          class: "form_control form-search form-search-colour", id: "form-search-home",
          placeholder: "Search for Islands..."
          %>
          <%= submit_tag "Search", class: "btn-search-home" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="featured-islands">
    <div class="fave-islands">
      <h2>OUR FAVOURITE ISLANDS</h2>
    </div>
    <div class="island-cards">
   <% @islands.first(3).each do |island| %>
      <div class="fi-card">
        <div class="fi-image">
          <% if island.photos.any? %>
             <%= link_to cl_image_tag(island.photos.first.key), island_path(island.id) %>
          <% else %>
              <img src="https://images.pexels.com/photos/994605/pexels-photo-994605.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940" alt="">
          <% end %>
        </div>
        <div class="fi-text">
          <h2 class="fi-text-js text-center"><%= island.name %></h2>
        </div>
      </div>
    <% end %>
    </div>

  </div>
</div>




