<%= form_tag islands_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form control",
      placeholder: "Find an island..."
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
<div class="container">
  <div class="cards-flex">
    <% @islands.each do |island| %>
      <% if island.photos.any? %>
        <% url = cl_image_tag island.photos.first.key %>
      <% else %>
        <% url = "https://images.unsplash.com/photo-1545579133-99bb5ab189bd?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80" %>
      <% end %>


      <div class="card-island" style="background-image: url(<%= url %>)">

        <h4><%= link_to island.name, island_path(island.id) %></h4>
        <p><%= island.address %></p>
      </div>
    <% end %>
  </div>
</div>




